{
  "version": "0.0.1",
  "license": "MIT",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "node ./scripts/build.js",
    "build:browser": "ENV_TYPE=browser tsdx build --target web --format esm --name index",
    "build:node": "ENV_TYPE=node tsdx build --target node --format cjs --name index",
    "test": "tsdx test",
    "lint": "tsdx lint",
    "prepare": "tsdx build && ./scripts/types.sh",
    "size": "size-limit",
    "analyze": "size-limit --why"
  },
  "peerDependencies": {},
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "name": "@wowswap-io/evm-sdk",
  "author": "Gabriel Unterholzer",
  "module": "dist/evm-sdk.esm.js",
  "size-limit": [
    {
      "path": "dist/evm-sdk.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/evm-sdk.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@size-limit/preset-small-lib": "^4.10.1",
    "husky": "^5.1.3",
    "rollup-plugin-replace": "^2.2.0",
    "size-limit": "^4.10.1",
    "ts-node": "10.2.1",
    "tsdx": "^0.14.1",
    "tslib": "^2.1.0",
    "typescript": "^4.2.3"
  },
  "dependencies": {
    "@wowswap-io/bignumber": "^1.0.0",
    "ethers": "5.4.5",
    "ts-method-cache": "3.3.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wowswap-io/evm-sdk.git"
  },
  "publishConfig": {
    "registry":"https://npm.pkg.github.com/",
    "access": "restricted"
  }
}
